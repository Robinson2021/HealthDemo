<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/launch_navigation"
    app:startDestination="@id/stepFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.techeniac.healthsample.ui.launch.splash.SplashFragment"
        android:label="SplashFragment">
        <action
            android:id="@+id/action_splash_to_step"
            app:destination="@id/stepFragment"
            app:popUpTo="@id/stepFragment"
            app:popUpToInclusive="true" />

    </fragment>


    <fragment
        android:id="@+id/stepFragment"
        android:name="com.techeniac.healthsample.ui.launch.step.StepFragment"
        android:label="StepFragment"/>
</navigation>